# ============================================
# Hybrid Knowledge Synthesizer - Environment
# ============================================
# Copy this file to .env and fill in the values.

# ──── n8n Configuration ───────────────────────────────
N8N_ENCRYPTION_KEY=generate-a-random-32-char-string
N8N_WEBHOOK_URL=http://localhost:5678/
# For ngrok tunnel: https://your-ngrok-subdomain.ngrok-free.app/

# ──── WhatsApp Business Cloud API ─────────────────────
WHATSAPP_ACCESS_TOKEN=your-meta-permanent-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_VERIFY_TOKEN=a-secret-string-you-choose

# ──── Azure OpenAI ────────────────────────────────────
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_API_VERSION=2024-10-21

# --- Azure AI Search (Silo B: Patents) ---
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-azure-search-admin-key
AZURE_SEARCH_INDEX_NAME=patents-index

# --- Databricks (Silo A: Engineering Docs) ---
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-databricks-personal-access-token
DATABRICKS_VS_ENDPOINT_NAME=your-vector-search-endpoint
DATABRICKS_VS_INDEX_NAME=your-vector-search-index

# --- LangSmith (Observability) ---
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=hybrid-knowledge-synthesizer
LANGCHAIN_TRACING_V2=true

# --- n8n ---
N8N_API_KEY=your-n8n-api-key

# --- Application ---
LOG_LEVEL=INFO
EMBEDDING_DIMENSIONS=512
